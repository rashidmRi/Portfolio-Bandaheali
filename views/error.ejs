<%- include('partials/header', {title: 'Error'}) %>

<main class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md text-center">
        <div class="text-red-500 text-6xl mb-4">
            <i class="fas fa-exclamation-circle"></i>
        </div>
        <h2 class="text-3xl font-bold text-gray-900">Oops! Something went wrong</h2>
        <p class="text-gray-600"><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %></p>
        <div class="pt-4">
            <a href="/" class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-indigo-700 transition">
                Go Back Home
            </a>
        </div>
    </div>
</main>

<%- include('partials/footer') %>
